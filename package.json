{
	"name": "fonzi2",
	"version": "0.3.0",
	"description": "Discord bot starter kit",
	"type": "commonjs",
	"files": [
		"dist"
	],
	"main": "dist/lib/index.js",
	"module": "dist/lib/index.mjs",
	"types": "dist/lib/index.d.ts",
	"scripts": {
		"build": "rimraf dist && tsup --config tsup.config.ts && pnpm copyfiles",
		"copyfiles": "copyfiles -u 1 views/**/* dist/views && copyfiles -u 1 public/**/* dist/public",
		"release": "pnpm build && changeset publish",
		"lint": "prettier --write . && tsc"
	},
	"keywords": [
		"discord",
		"bot",
		"typescript"
	],
	"author": "ljs360d",
	"license": "MIT",
	"dependencies": {
		"axios": "^1.6.2",
		"cookie-session": "^2.0.0",
		"discord.js": "^14.14.1",
		"dotenv": "^16.3.1",
		"ejs": "^3.1.9",
		"express": "^4.18.2"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@types/cookie-session": "^2.0.48",
		"@types/express": "^4.17.21",
		"@types/node": "^20.10.5",
		"copyfiles": "^2.4.1",
		"cross-env": "^7.0.3",
		"prettier": "^3.1.1",
		"reflect-metadata": "^0.1.14",
		"rimraf": "^5.0.5",
		"simple-git-hooks": "^2.9.0",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^1.1.8",
		"tsup": "^8.0.1",
		"typescript": "^5.3.3"
	},
	"changeset": {
		"defaultBranch": "master"
	},
	"publishConfig": {
		"access": "public"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint && git add ."
	}
}
